@page "/nasapicture"
@using WebSpark.HttpClientUtility.RequestResult
@using System.Text.Json.Serialization

<PageTitle>NASA Picture of the Day</PageTitle>

<div class="jumbotron">
    <div class="container">
        <div class="card border-info">
            <div class="card-header">
                <h1>
                    NASA Picture of the Day
                </h1>
            </div>
            <div class="card-body">
                <div class="container">
                    @if (IsLoading)
                    {
                        <div class="row">
                            <div class="col-12 text-center">
                                <div class="spinner-border" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                                <p>Loading NASA pictures...</p>
                            </div>
                        </div>
                    }
                    else if (ApiResponse != null && ApiResponse.Any())
                    {
                        <div class="row">
                            @foreach (var item in ApiResponse)
                            {
                                <div class="col-4">
                                    <div class="card w-100">
                                        <div class="card-header">
                                            <h2>@item.title</h2>
                                        </div>
                                        <div class="card-body">
                                            <a href="@item.hdurl" target="_blank">
                                                <img src="@item.url" class="img-fluid d-block w-100 h-100"
                                                    style="max-height:500px;max-width:500px;" alt="@item.title" />
                                            </a>
                                        </div>
                                        <div class="card-footer">
                                            <p>@item.explanation</p>
                                            @if (!string.IsNullOrEmpty(item.copyright))
                                            {
                                                <p class="text-end"><small>&copy; @item.copyright</small></p>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            No NASA pictures found. Please try again later.
                        </div>
                    }
                </div>
            </div>
            <div class="card-footer">
                @if (ApiRequest != null)
                {
                    <strong>The Api Get call took @ApiRequest.ElapsedMilliseconds milliseconds to return.</strong>
                    <br />
                    <small>Data from NASA API</small>
                    <p>
                        @ApiRequest.ResultAge
                    </p>
                }
            </div>
        </div>
    </div>
</div>