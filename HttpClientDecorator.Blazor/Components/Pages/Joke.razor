@page "/joke"
@using WebSpark.HttpClientUtility.RequestResult

<PageTitle>Random Joke</PageTitle>

<div class="jumbotron">
    <div class="container">
        <div class="card border-info">
            <div class="card-header">
                @if (TheJoke != null && !string.IsNullOrEmpty(TheJoke.category))
                {
                    <h1>
                        Here is your joke with category: @TheJoke.category
                    </h1>
                }
                else
                {
                    <h1>Random Joke</h1>
                }
            </div>
            <div class="card-body">
                @if (isLoading)
                {
                    <div class="d-flex justify-content-center">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                }
                else if (TheJoke != null)
                {
                    @if (TheJoke.error)
                    {
                        <p>There was an error getting the joke.</p>
                    }
                    else
                    {
                        @if (TheJoke.type == "single")
                        {
                            <p>@TheJoke.joke</p>
                        }
                        else if (TheJoke.type == "twopart")
                        {
                            <dl>
                                <dt>
                                    @TheJoke.setup
                                </dt>
                                <dd>
                                    @TheJoke.delivery
                                </dd>
                            </dl>
                        }

                        <div class="mt-4">
                            <button class="btn btn-primary" @onclick="GetNewJoke">Get Another Joke</button>
                        </div>
                    }
                }
                else
                {
                    <p>There was an error getting the joke.</p>
                }
            </div>
            <div class="card-footer">
                @if (JokeResult != null)
                {
                    <strong>The Api Get call took @JokeResult.ElapsedMilliseconds milliseconds to return.</strong>
                    <br />
                    <small>Joke is from @JokeResult.RequestPath</small>
                    <br />
                    <small>@JokeResult.ResultAge</small>
                }
            </div>
        </div>
    </div>
</div>