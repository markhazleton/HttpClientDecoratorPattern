@page
@model HttpClientDecorator.Web.Pages.TriviaModel
@{
    var answers = Model.theTrivia.incorrect_answers.ToList();
    answers.Add(Model.theTrivia.correct_answer);
    answers = answers.OrderBy(x => Guid.NewGuid()).ToList();
}

@section HeadScripts
{
    <style type="text/css">
        .question {
            width: 75%;
        }

        .options {
            position: relative;
            padding-left: 40px;
        }

        #options label {
            display: block;
            margin-bottom: 15px;
            font-size: 14px;
            cursor: pointer;
        }

        .options input {
            opacity: 0;
        }

        .checkmark {
            position: absolute;
            top: -1px;
            left: 0;
            height: 25px;
            width: 25px;
            background-color: #555;
            border: 1px solid #ddd;
            border-radius: 50%;
        }

        .options input:checked ~ .checkmark:after {
            display: block;
        }

        .options .checkmark:after {
            content: "";
            width: 10px;
            height: 10px;
            display: block;
            background: white;
            position: absolute;
            top: 50%;
            left: 50%;
            border-radius: 50%;
            transform: translate(-50%,-50%) scale(0);
            transition: 300ms ease-in-out 0s;
        }

        .options input[type="radio"]:checked ~ .checkmark {
            background: #21bf73;
            transition: 300ms ease-in-out 0s;
        }
        .options input[type="radio"]:checked ~ .checkmark:after {
                transform: translate(-50%,-50%) scale(1);
        }

    </style>
}


<div class="jumbotron">
    <div class="container">
        <div class="card border-info">
            <div class="card-header">
                <h1>
                    @Html.DisplayFor(model => model.theTrivia.category) Trivia
                </h1>
            </div>
            <div class="card-body">
                <div class="container mt-sm-5 my-1">
                    <div class="question ml-sm-5 pl-sm-5 pt-2">
                        <div class="py-2 h5"><b>Q. @Html.Raw(Model.theTrivia.question)</b></div>
                        <div class="ml-md-3 ml-sm-3 pl-md-5 pt-sm-0 pt-3" id="options">
                            @foreach (var answer in answers)
                            {
                                <label class="options">
                                    @Html.Raw(answer)
                                    <input type="radio" name="radio">
                                    <span class="checkmark"></span>
                                </label>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <strong>The Api Get call took @Html.DisplayFor(model=>model.triviaResult.ElapsedMilliseconds) millisectons to return.</strong>
                <br />
                <small>Trivia is from @Html.DisplayFor(model=>model.triviaResult.RequestPath)</small>
            </div>
        </div>
    </div>
</div>
