@page
@model NasaPicturePageModel
@{
    ViewData["Title"] = "NASA Picture of the Day";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="py-5 bg-body-tertiary rounded-3">
    <div class="container">
        <div class="card border-info">
            <div class="card-header">
                <h1>
                    NASA Picture of the Day
                </h1>
                <p>

                </p>
            </div>
            <div class="card-body">
                <div class="container">
                    <div class="row">
                        @{
                            foreach (var item in Model.apiResponse)
                            {
                                <div class="col-4">
                                    <div class="card w-100 h-100">
                                        <div class="card-header">
                                            <h2>@item.title</h2>
                                        </div>
                                        <div class="card-body">
                                            <a href="@item.hdurl" target="_blank">
                                                <img src="@item.url" class="img-fluid d-block mh-100 mw-100" 
                                                     alt="@item.title" />
                                            </a>
                                        </div>
                                        <div class="card-footer">
                                            <p>@item.explanation</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <strong>The Api Get call took @Html.DisplayFor(model => model.apiRequest.ElapsedMilliseconds) milliseconds
                    to return.</strong>
                <br />
                <small>Data from @Html.DisplayFor(model => model.apiRequest.RequestPath)</small>
                <p>
                    @Model.apiRequest.ResultAge
                </p>
            </div>
        </div>
    </div>
</div>